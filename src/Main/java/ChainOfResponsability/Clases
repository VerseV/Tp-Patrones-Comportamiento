//Crear clase solicitud
        package Main.Java.ChainOfResponsibility;

        public class Solicitud {
        private String motivo;
        private int nivel; // 1 = Asistente, 2 = Profesor, 3 = Coordinador

        public Solicitud(String motivo, int nivel) {
        this.motivo = motivo;
        this.nivel = nivel;}

        public String getMotivo() {
        return motivo;}

        public int getNivel() {
        return nivel; }}
        //Crear Interfaz Handler
        package Main.Java.ChainOfResponsibility;

        public interface Handler {
        void setNext(Handler next);
        void handle(Solicitud s);}
       
//Crear Handlers concretos
        package Main.Java.ChainOfResponsibility;

        public class AsistenteHandler implements Handler {

        private Handler next;

        @Override
        public void setNext(Handler next) {
        this.next = next; }

        @Override
        public void handle(Solicitud s) {
        if (s.getNivel() == 1) {
            System.out.println("Asistente gestiona la solicitud: " + s.getMotivo());
        } else if (next != null) {
            next.handle(s); } }}
  //Profesor
        package Main.Java.ChainOfResponsibility;

        public class ProfesorHandler implements Handler {

        private Handler next;

        @Override
        public void setNext(Handler next) {
        this.next = next;
    }

        @Override
        public void handle(Solicitud s) {
        if (s.getNivel() == 2) {
            System.out.println("Profesor gestiona la solicitud: " + s.getMotivo());
        } else if (next != null) {
            next.handle(s);
        }
    }
}
 //Coordinador
        package Main.Java.ChainOfResponsibility;

        public class CoordinadorHandler implements Handler {

        private Handler next;

        @Override
        public void setNext(Handler next) {
        this.next = next;
    }

        @Override
        public void handle(Solicitud s) {
        if (s.getNivel() == 3) {
            System.out.println("Coordinador gestiona la solicitud: " + s.getMotivo());
        } else if (next != null) {
            next.handle(s);
        } else {
            System.out.println("Solicitud no pudo ser gestionada.");
        }
    }
}
